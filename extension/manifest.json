{
    "manifest_version": 3,
    "name": "Application Tracker",
    "description": "Rack job applications directly from posting pages",
    "version": "0.1.0",

    "action": {
        "default_title": "Application Tracker", 
        "default_popup": "popup.html"
    },

    "permissions": [
        "storage",
        "activeTab"
    ],

    "background": {
        "service_worker": "background.js"
    }
}